@page "/ViewStudent"
@model StudentDetails.Pages.Account.ViewStudentModel
@{
    Layout = "_Layout1";
    ViewData["Title"] = "View Student Details";
    var tmp = 1;
    string  function(){
        if (tmp == 1)
        {
            tmp = 2;
            return "Grey";
        }
        else
        {
            tmp = 1;
            return "Default";
        }
    }
}
<style>
    .container{
        margin:20px;
    align-content:center;
    }
    td{
        align-content:center;
    }
    #Grey{
        background-color:lightgrey;
    }
    #Grey:hover,#Default:hover{
            background-color: rgb(206, 210, 217);
    }
</style>
<div class="container-fluid container">
    <div class="alert alert-primary" role="alert">
        <h2>All Student Details</h2><br />        
    </div>
    <div>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Roll Number</th>
                    <th>Name</th>
                    <th>Class</th>
                    <th>Gender</th>
                    <th>DOB</th>
                    <th>School Code</th>
                    <th>School Name</th>
                    <th>Academic Year</th>
                    <th>Contact Number</th>
                </tr>
                
            </thead>
            <tbody>
                @foreach(var row in  Model.Table)
                {
                    <tr id="@function()">
                    <td>@row.Stud_id</td>
                    <td>@row.Roll_No</td>
                    <td>@row.Stud_Name</td>
                    <td>@row.Class</td>
                    <td>@row.Gender</td>
                    <td>@row.Dob</td>
                    <td>@row.School_Code</td>
                    @if(row.School.School_Name!=null){
                    <td>@row.School.School_Name</td>
                    }
                    <td>@row.Acd_Year</td>
                    <td>@row.Contact_no</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
